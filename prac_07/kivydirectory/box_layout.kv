BoxLayout:
    id: outer_box
    orientation: 'vertical'

    BoxLayout:
        id: first_row_box
        orientation: 'horizontal'
        size_hint_y: 0.2

        TextInput:
            id: input_name      #name of the text input component
            text: ''            #set text to empty string
            size_hint_x: 0.7

        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: 0.15

        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.15
    Label:
        id: output_label
        size_hint_y: 0.8
        text: 'Enter your name'
        font_size: 32
        color: (0.831, 0.451, 0.831)


