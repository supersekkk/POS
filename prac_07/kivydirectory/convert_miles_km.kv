BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: first_text
            text: '0'
            font_size: 48
            orientation: 'horizontal'
            on_text: app.convert_to_km(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2

            Button:
                text: 'Up'
                orientation: 'vertical'
                on_press: app.up_one(first_text.text)

            Button:
                text: 'Down'
                orientation: 'vertical'
                on_press: app.down_one(first_text.text)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert_to_km(first_text.text)

    Label:
        id: output_label
        text: '0'
        font_size: 48
        color: (1, 1, 0, 1)



